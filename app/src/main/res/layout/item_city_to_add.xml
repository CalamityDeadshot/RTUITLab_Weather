<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_city_item"
        android:padding="16dp">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btn_add"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="Moscow" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_name"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btn_add"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Moscow, Russia" />

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/location_name"
            android:layout_alignBottom="@id/full_name"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_retry_button"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:src="@drawable/ic_add" />

    </RelativeLayout>
</layout>